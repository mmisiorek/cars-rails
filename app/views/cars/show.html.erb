<div class="panel panel-default">
  <div class="panel-body">
    <div class="page-header">
      <h1>
        <%= @pageTitle %>
        <% if @saved_user and @saved_user_ability.can? :manage, @car %>
          <%= link_to controller: 'cars', action: 'edit', id: @car.id, class: 'btn btn-primary pull-right' do %>
            <span class="glyphicon glyphicon-edit"></span>
            Edit
          <% end %>
        <% end %>
      </h1>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="panel-header panel-header-inline">
          <h2>General</h2>
        </div>

        <% if @car.photo != nil %>
        <label>Photo of the car</label> <br>
        <div class="details-box">
          <%= image_tag url_for(controller: 'document', action: 'show', id: @car.photo.id, token: @car.photo.token, 
                    width: 1200, height: 300) %>
        </div>
        <% end %>

        <div class="row">
          <div class="col-md-6">
            <label>Brand of the car</label>
            <div class="details-box">
              <%= @car.brand %>
            </div>
          </div>
          <div class="col-md-6">
            <label>Model of the car</label>
            <div class="details-box">
              <%= @car.model %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <label for='car-date'>Manufactured Date</label>
            <div class="details-box">
              <%= @car.manufactured_date %>
            </div>
          </div>
          <div class="col-md-6">
            <label for='car-regnumber'>Registration Number</label>
            <div class="details-box">
              <%= @car.registration_number %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-body">
        <div class="panel-header panel-header-inline">
          <h2>Availability</h2>
        </div>

        <div class="row available-row">
          <div class="col-md-6">
            <% if @car.is_available %>
                <span class="text-success"><span class="glyphicon glyphicon-ok"></span>&nbsp;&nbsp;Available</span>
            <% else %>
                <span class="text-danger"><span class="glyphicon glyphicon-remove"></span>&nbsp;&nbsp;Unavailable</span>
            <% end %>
          </div>
          <div class="col-md-6">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>