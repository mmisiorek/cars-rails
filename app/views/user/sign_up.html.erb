<div class="panel panel-default">
  <div class="panel-body">
    <div class="page-header">
      <h1><%= @pageTitle %></h1>
    </div>
    <%= form_for(@user, url: {controller: 'user', action: 'create'}, method: 'post') do |f| %>

    <div class="row">
      <div class="col-md-4">
        Username:
      </div>
      <div class="col-md-8">
        <%= f.text_field :username, class: 'form-control' %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class="col-md-4">
        Password:
      </div>
      <div class="col-md-8">
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class="col-md-4">
        Password:
      </div>
      <div class="col-md-8">
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class="col-md-4">
        Repeat password:
      </div>
      <div class="col-md-8">
        <%= f.password_field :repeat_password, class: 'form-control' %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class="col-md-12">
        <%= f.submit 'Sign up', class: 'btn btn-primary pull-right' %>
      </div>
    </div>

    <% end %>
  </div>
</div>