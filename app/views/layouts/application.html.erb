<html lang="en" ng-app="carsApp">

<head>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
</head>

<body>
<nav class="navbar navbar-default navbar-fixed-top navbar-inverse" id="main-navbar" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="">Cars Vending Ltd.</a>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">

        <% if @activePage == "allCars" %>
            <li class="active"><%= link_to "List off all cars" %></li>
        <% else %>
            <li><%= link_to 'List off all cars', {:controller => 'cars', :action => 'index'} %></li>
        <% end %>

        <% if @activePage == "newCar" %>
            <li class="active"><%= link_to 'Add a new car'%></li>
        <% else %>
            <li><%= link_to 'Add a new car', {:controller => 'cars', :action => 'new'} %></li>
        <% end %>
      </ul>
    </div>
  </div>

</nav>


<div id="content">
  <%= yield %>
</div>
</body>

</html>